// Description:
// Jenkins pipeline to retrieve ABFS uploaders(s) (GCE) instance details.
// - Lists instances in CLOUD_ZONE filtered by UPLOADER_INSTANCE_PREFIX and prints
//   their status.
// - Requires env: CLOUD_ZONE, UPLOADER_INSTANCE_PREFIX. Uses gcloud and the
//   Jenkins K8s agent image.


pipeline {

  agent none

  environment {

    // Define Pod Template in environment so we can override storageClassName.
    def kubernetesPodTemplate = """
      apiVersion: v1
      kind: Pod
      spec:
        hostname: jenkins-abfs-uploader-details-pod
        serviceAccountName: ${JENKINS_SERVICE_ACCOUNT}
        containers:
        - name: abfs-uploader-details
          image: ${CLOUD_REGION}-docker.pkg.dev/${CLOUD_PROJECT}/${INFRA_DOCKER_ARTIFACT_PATH_NAME}:${INFRA_IMAGE_TAG}
          imagePullPolicy: Always
          command:
          - sleep
          args:
          - 5h
          tty: true
    """.stripIndent()
  }

  stages {
    stage ('Start Instance') {
      agent { kubernetes { yaml kubernetesPodTemplate } }
      stages {
        stage ('Uploader Details') {
          steps {
            script {
              currentBuild.description = "$BUILD_USER"
            }
            container(name: 'abfs-uploader-details') {
              catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
                sh '''
                  cd ./workloads/android/pipelines/environment/abfs/server_administration/get_server_details/
                  INSTANCE_PREFIX=${UPLOADER_INSTANCE_PREFIX} \
                  ZONE=${CLOUD_ZONE} \
                  LIST_BRANCHES="true" \
                  ./get_instance_details.sh
                '''
              }
              archiveArtifacts artifacts: '*status*.txt', followSymlinks: false, onlyIfSuccessful: false, allowEmptyArchive: true
              archiveArtifacts artifacts: '*cloud-init*.log', followSymlinks: false, onlyIfSuccessful: false, allowEmptyArchive: true
              archiveArtifacts artifacts: '*journal*.log', followSymlinks: false, onlyIfSuccessful: false, allowEmptyArchive: true
            }
          }
        }
      }
    }
  }
}
